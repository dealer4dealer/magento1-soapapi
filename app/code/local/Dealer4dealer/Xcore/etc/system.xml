                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>
                        <mapping translate="label comment" module="dealer4dealer_xcore">
                            <label>Custom fields</label>
                            <comment><![CDATA[Fields correspond to data keys in the customer object]]></comment>
                            <frontend_model>dealer4dealer_xcore/adminhtml_system_config_field_customermapping</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mapping>
                        <list_limit translate="label comment" module="dealer4dealer_xcore">
                            <label>Collection limit on list</label>
                            <comment><![CDATA[Limiting the number of records retrieved by the customer api list]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </list_limit>
                    </fields>
                </customer>
            </groups>
        </xcore_customers>
        <xcore_products>
            <tab>d4d_xcore</tab>
            <label>Product configuration</label>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
